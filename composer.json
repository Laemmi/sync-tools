{
  "name": "laemmi/sync-tools",
  "type": "project",
  "homepage": "https://www.spacerabbit.de",
  "license": "MIT",
  "authors": [{
    "name": "Michael LÃ¤mmlein",
    "email": "laemmi@spacerabbit.de",
    "role": "Maintainer"
  }],
  "support": {
    "source": "https://gitlab.com/laemmi/sync-tools"
  },
  "minimum-stability": "stable",
  "require": {
    "php": "^7.4",
    "ext-PDO": "*",
    "ext-pdo_mysql": "*",
    "symfony/console": "^5.2",
    "symfony/yaml": "^5.2"
  },
  "config": {
    "platform": {
      "php": "7.4"
    },
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "Laemmi\\SyncTools\\": "src"
    }
  },
  "scripts": {
    "test": [
      "@phpunit",
      "@phpcs"
    ],
    "phpunit": "phpunit --coverage-text --colors=always",
    "phpcs": "phpcs",
    "serve": "php -S 0.0.0.0:8080"
  },
  "require-dev": {
    "phpunit/phpunit": "^9",
    "squizlabs/php_codesniffer": "^3.5"
  }
}
